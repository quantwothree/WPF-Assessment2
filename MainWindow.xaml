<Window x:Class="Assessment_2_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Person Info -->
            <ColumnDefinition Width="*" />
            <!-- Spacer / Middle -->
            <ColumnDefinition Width="*" />
            <!-- Job Info -->
        </Grid.ColumnDefinitions>

        <!-- Person Info -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- First Name -->
                <RowDefinition Height="Auto"/>
                <!-- Last Name -->
                <RowDefinition Height="Auto"/>
                <!-- DOB -->
                <RowDefinition Height="Auto"/>
                <!-- Hourly Rate -->
                <RowDefinition Height="Auto"/>
                <!-- First button pair -->
                <RowDefinition Height="Auto"/>
                <!-- Second button pair -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="First Name:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Content="Last Name:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="LastNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <Label Content="DOB:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <DatePicker x:Name="DOBPicker" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <Label Content="Hourly rate:" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="HourlyRateTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <!-- First pair of buttons -->
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button x:Name="SubmitButton" Content="Submit" Width="93" Margin="0,0,10,0" Click="SubmitButton_Click"/>
                <Button x:Name="GetContractorsButton" Content="Get Contractors" Width="150" Click="GetContractorsButton_Click"/>
            </StackPanel>

            <!-- Second pair of buttons -->
            <!--<StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button x:Name="AssignJobButton" Content="Assign Job" Width="93" Margin="0,0,10,0" Click="AssignJobButton_Click"/>
                <Button x:Name="GetAvailableContractorsButton" Content="Get Available Contractors" Width="150" Click="GetAvailableContractorsButton_Click"/>
            </StackPanel>-->

        </Grid>


        <!-- Middle Column: Empty Spacer (for future use) -->
        <Grid Grid.Column="1" Margin="10">
            <ListBox x:Name="MiddleListBox" />
        </Grid>

       
        <!-- Job Info -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Job Title -->
                <RowDefinition Height="Auto"/>
                <!-- Job Cost -->
                <RowDefinition Height="Auto"/>
                <!-- Job Date -->
                <RowDefinition Height="Auto"/>
                <!-- First buttons row -->
                <RowDefinition Height="Auto"/>
                <!-- Second buttons row -->
                <RowDefinition Height="Auto"/>
                <!-- Third button row -->
            </Grid.RowDefinitions>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Job's title:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="JobTitleTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Content="Job's cost:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="JobCostTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <Label Content="Job's date:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <DatePicker x:Name="JobDatePicker" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <!-- Row 3: Three buttons (Get Jobs, Submit, Complete) -->
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button x:Name="GetJobsButton" Content="Get Jobs" Width="80" Margin="0,0,10,0" Click="GetJobsButton_Click"/>
                <Button x:Name="JobSubmitButton" Content="Submit" Width="80" Margin="0,0,10,0" Click="JobSubmitButton_Click"/>
                <Button x:Name="CompleteJobButton" Content="Complete" Width="80" Click="CompleteJobButton_Click"/>
            </StackPanel>
            
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button x:Name="GetUnassignedJobsButton" Content="Get Unassigned Jobs" Width="260" Click="GetUnassignedJobsButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button x:Name="GetJobByCostButton" Content="Get Job by Cost" Width="260" Click="GetJobByCostButton_Click"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
